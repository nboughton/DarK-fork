#!/usr/bin/make -f

build: build-arch build-indep
build-arch: build-stamp
build-indep: build-stamp

build-stamp:
	dh_testdir
	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp
	rm -rf debian/monotone-icon-theme
	dh_clean

install: build
	if [ -f $(CURDIR)/debian/monotone-icon-theme-current.deb ]; then \
		rm -f $(CURDIR)/debian/monotone-icon-theme-current.deb ;\
	fi;
	dh_testdir
	dh_testroot
	dh_prep  
	dh_installdirs
	mkdir -p $(CURDIR)/debian/monotone-icon-theme/usr/share/icons
	cp -R $(CURDIR)/monotone $(CURDIR)/debian/monotone-icon-theme/usr/share/icons/monotone

# colorpalettes
	mkdir -p $(CURDIR)/debian/monotone-icon-theme/usr/share/inkscape/palettes
	cp -R $(CURDIR)/debian/monotoneicons.gpl $(CURDIR)/debian/monotone-icon-theme/usr/share/inkscape/palettes
# gajim-theme
	mkdir -p $(CURDIR)/debian/monotone-icon-theme/usr/share/gajim/data/iconsets/
	ln -s /usr/share/icons/monotone/App_themes/gajim_monotone $(CURDIR)/debian/monotone-icon-theme/usr/share/gajim/data/iconsets/Monotone
# gajim newer gtk3 version
	mkdir -p $(CURDIR)/debian/monotone-icon-theme/usr/lib/python3/dist-packages/gajim/data/iconsets/
	ln -s /usr/share/icons/monotone/App_themes/gajim_monotone $(CURDIR)/debian/monotone-icon-theme/usr/lib/python3/dist-packages/gajim/data/iconsets/Monotone
# filezilla
	mkdir -p $(CURDIR)/debian/monotone-icon-theme/usr/share/filezilla/resources
	ln -s /usr/share/icons/monotone/App_themes/filezilla_monotone $(CURDIR)/debian/monotone-icon-theme/usr/share/filezilla/resources/Monotone
# ugly pidgin theme hack
	mkdir -p $(CURDIR)/debian/monotone-icon-theme/etc/X11/Xsession.d
	cp $(CURDIR)/debian/99_enable_pidgin_theme_monotone $(CURDIR)/debian/monotone-icon-theme/etc/X11/Xsession.d/99_enable_pidgin_theme_monotone
# amule
	mkdir -p $(CURDIR)/debian/monotone-icon-theme/usr/share/amule/skins/
	ln -s /usr/share/icons/monotone/App_themes/amule_monotone/amule_monotone.zip $(CURDIR)/debian/monotone-icon-theme/usr/share/amule/skins/amule_monotone.zip
binary-indep: build install
	dh_testdir
	dh_testroot
	dh_installdocs
	dh_installchangelogs 
	dh_fixperms
	dh_compress
	dh_installdeb
	dh_gencontrol
	dh_md5sums
#	dh_builddeb
	dh_builddeb -- -Zxz -Sextreme -z9 --uniform-compression
	dh_clean
	if [ -f $(CURDIR)/../monotone-icon-theme*.deb ]; then \
		mv $(CURDIR)/../monotone-icon-theme*.deb $(CURDIR)/debian/monotone-icon-theme-current.deb ;\
	fi;
	
binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install
